{
  "name": "patela-expense-tracker",
  "version": "1.0.0",
  "description": "Track your expenses and income for free and with maximum privacy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "rebuild": "npx electron-rebuild -f -w better-sqlite3",
    "prebuild": "npm run rebuild",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "npm run build-win && npm run build-mac && npm run build-linux"
  },
  "keywords": [
    "expense-tracker",
    "finance",
    "personal-finance",
    "electron",
    "desktop-app"
  ],
  "author": "Patela",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2"
  },
  "build": {
    "appId": "com.patela.expense-tracker",
    "productName": "Patela Expense Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "assets/**/*",
      "data/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Finance"
    }
  }
}